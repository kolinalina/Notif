<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="8dp"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:padding="5dp"
            android:id="@+id/one">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IdOrder: "
                android:id="@+id/idorder1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this for idorder"
                android:layout_toRightOf="@+id/idorder1"
                android:id="@+id/idorder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", IdClient: "
                android:id="@+id/idclient1"
                android:layout_toRightOf="@+id/idorder"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this for idclient"
                android:layout_toRightOf="@+id/idclient1"
                android:id="@+id/idclient"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", deadline: "
                android:id="@+id/deadline1"
                android:layout_toRightOf="@+id/idclient"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="deadline: "
                android:id="@+id/deadline"
                android:layout_toRightOf="@+id/deadline1"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="proyek"
                android:textSize="20sp"
                android:id="@+id/proyek"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lokasi"
                android:id="@+id/lokasi"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="status : "
                android:id="@+id/statuss"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="status"
                android:id="@+id/status"/>



        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="3dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="8dp"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:padding="5dp"
            android:id="@+id/one">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IdOrder: "
                android:id="@+id/idorder1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this for idorder"
                android:layout_toRightOf="@+id/idorder1"
                android:id="@+id/idorderr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", IdClient: "
                android:id="@+id/idclient1"
                android:layout_toRightOf="@+id/idorderr"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this for idclient"
                android:layout_toRightOf="@+id/idclient1"
                android:id="@+id/idclientt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", IdKomplain: "
                android:id="@+id/idkomplain1"
                android:layout_toRightOf="@+id/idclientt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", IdKomplain: "
                android:id="@+id/idkomplainn"
                android:layout_toRightOf="@+id/idkomplain1"/>





        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DetailKomplain"
                android:textSize="20sp"
                android:id="@+id/detail"/>


        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
